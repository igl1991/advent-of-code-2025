{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",              // This enables ESM in TypeScript
    "moduleResolution": "node",      // Resolve modules like Node.js does
    "esModuleInterop": true,         // Ensures compatibility with CommonJS
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,                  // Strict mode is always a good idea
    "outDir": "./dist",              // Output directory for compiled files
    "rootDir": "./src",              // Your TypeScript source files are in the src folder
    "baseUrl": ".",                  // Set base path for module resolution
    "paths": {
      "*": ["node_modules/*"]        // Help TypeScript find modules
    },
    "sourceMap": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*"],           // Include all files in the src directory
  "exclude": ["node_modules"]        // Exclude node_modules
}
